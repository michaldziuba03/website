---
import RotatingText from './RotatingText';
import { Button } from './Button';
import { Container } from './Container';
---

<section id="hero" class="py-24 w-full md:py-lg md:pt-sm overflow-x-hidden">
  <Container className="flex flex-col items-center text-center max-w-4xl">
    <h1 class="font-black text-5xl sm:text-6xl md:text-7xl text-balance">Building digital experiences with</h1>
    <h1 class="font-black text-4xl sm:text-5xl md:text-6xl text-balance flex items-center justify-center">
      <RotatingText
        client:only
        texts={['Creative code.', 'Creative design.']}
        mainClassName="px-2 sm:px-2 md:px-3 bg-primary text-white overflow-hidden py-0.5 sm:py-1 md:py-2 justify-center rounded-lg"
        staggerFrom="last"
        initial={{ y: "100%" } as any}
        animate={{ y: 0 } as any}
        exit={{ y: "-120%" } as any}
        staggerDuration={0.025}
        splitLevelClassName="overflow-hidden pb-0.5 sm:pb-1 md:pb-1"
        transition={{ type: "spring", damping: 30, stiffness: 400 }}
        rotationInterval={2000}
      />
    </h1>

    <p class="text-xl text-gray-800 text-balance mt-10 max-w-2xl">
      I'm software developer and open source contributor passionate about building efficient and scalable solutions.
    </p>

    <div class="flex gap-8 mt-10 flex-wrap justify-center">
      <Button variant="primary" size="lg" href="#portfolio">See Projects</Button>
      <Button variant="outline" size="lg" href="/resume.pdf">My Resume</Button>
    </div>
  </Container>
</section>

