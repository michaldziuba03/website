---
import RotatingText from './RotatingText';
import { Button } from './Button';
import { Container } from './Container';
import { LuChevronsDown } from 'react-icons/lu';
---

<section id="hero" class="py-32 w-full md:py-lg md:pt-sm overflow-x-hidden">
  <Container className="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16 items-center">
    <div class="flex flex-col">
      <h1 class="font-black text-5xl sm:text-6xl md:text-8xl text-balance">I make...</h1>
      <h1 class="font-black text-4xl sm:text-5xl md:text-6xl text-balance flex items-center lg:justify-start justify-center">
        Creative&nbsp;
        <RotatingText
          client:only
          texts={['code.', 'design.']}
          mainClassName="px-2 shrink-0 sm:px-2 md:px-3 bg-primary text-white overflow-hidden py-0.5 sm:py-1 md:py-2 justify-center rounded-lg"
          staggerFrom="last"
          initial={{ y: "100%" } as any}
          animate={{ y: 0 } as any}
          exit={{ y: "-120%" } as any}
          staggerDuration={0.025}
          splitLevelClassName="overflow-hidden pb-0.5 sm:pb-1 md:pb-1"
          transition={{ type: "spring", damping: 30, stiffness: 400 }}
          rotationInterval={2000}
        />
      </h1>

      <p class="text-xl text-gray-800 text-balance mt-10 max-w-2xl">
        I'm software developer and open source contributor passionate about building efficient and scalable solutions.
      </p>

      <div class="flex gap-8 mt-10 flex-wrap lg:justify-start justify-center">
        <Button variant="primary" size="lg" href="#portfolio">See Projects</Button>
        <Button variant="outline" size="lg" href="/resume.pdf">My Resume</Button>
      </div>
    </div>

    <div class="flex justify-center lg:justify-end">
      <!-- Animated code blocks visualization -->
      <div class="relative w-full max-w-lg">
        <div class="space-y-4">
          <!-- Floating code block 1 -->
          <div class="bg-slate-900 rounded-lg p-4 shadow-lg transform rotate-3 hover:rotate-0 transition-transform duration-300">
            <div class="flex items-center gap-2 mb-2">
              <div class="w-3 h-3 bg-red-500 rounded-full"></div>
              <div class="w-3 h-3 bg-yellow-500 rounded-full"></div>
              <div class="w-3 h-3 bg-green-500 rounded-full"></div>
            </div>
            <div class="space-y-2">
              <div class="h-2 bg-blue-400 rounded w-3/4"></div>
              <div class="h-2 bg-purple-400 rounded w-1/2"></div>
              <div class="h-2 bg-green-400 rounded w-2/3"></div>
            </div>
          </div>
          
          <!-- Floating code block 2 -->
          <div class="bg-slate-900 rounded-lg p-4 shadow-lg transform -rotate-2 hover:rotate-0 transition-transform duration-300 ml-8">
            <div class="flex items-center gap-2 mb-2">
              <div class="w-3 h-3 bg-red-500 rounded-full"></div>
              <div class="w-3 h-3 bg-yellow-500 rounded-full"></div>
              <div class="w-3 h-3 bg-green-500 rounded-full"></div>
            </div>
            <div class="space-y-2">
              <div class="h-2 bg-pink-400 rounded w-2/3"></div>
              <div class="h-2 bg-cyan-400 rounded w-3/4"></div>
              <div class="h-2 bg-orange-400 rounded w-1/2"></div>
            </div>
          </div>
          
          <!-- Floating code block 3 -->
          <div class="bg-slate-900 rounded-lg p-4 shadow-lg transform rotate-1 hover:rotate-0 transition-transform duration-300">
            <div class="flex items-center gap-2 mb-2">
              <div class="w-3 h-3 bg-red-500 rounded-full"></div>
              <div class="w-3 h-3 bg-yellow-500 rounded-full"></div>
              <div class="w-3 h-3 bg-green-500 rounded-full"></div>
            </div>
            <div class="space-y-2">
              <div class="h-2 bg-emerald-400 rounded w-1/2"></div>
              <div class="h-2 bg-violet-400 rounded w-3/4"></div>
              <div class="h-2 bg-rose-400 rounded w-2/3"></div>
            </div>
          </div>
        </div>
        
        <!-- Floating elements for extra visual interest -->
        <div class="absolute -top-4 -right-4 w-8 h-8 bg-primary/20 rounded-full animate-pulse"></div>
        <div class="absolute top-1/2 -left-6 w-6 h-6 bg-purple-400/30 rounded-full animate-bounce" style="animation-delay: 1s;"></div>
        <div class="absolute -bottom-2 right-1/3 w-4 h-4 bg-cyan-400/40 rounded-full animate-ping" style="animation-delay: 2s;"></div>
      </div>
    </div>
  </Container>

  <div class="flex justify-center mt-20">
    <div class="flex flex-col text-4xl items-center animate-bounce">
      <LuChevronsDown />
    </div>
  </div>
</section>

