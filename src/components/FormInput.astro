---
export interface Props {
  name: string;
  placeholder: string;
  required?: boolean;
  type?: 'text' | 'email' | 'tel' | 'url';
  class?: string;
}

const { 
  name, 
  placeholder, 
  required = false, 
  type = 'text',
  class: className = ''
} = Astro.props;

const baseClasses = "bg-white p-4 rounded-lg focus:border-primary border-gray-300 focus:ring-primary focus:outline-none border-2";
---

<input
  class={`${baseClasses} ${className}`}
  name={name}
  placeholder={placeholder}
  type={type}
  required={required}
/>
