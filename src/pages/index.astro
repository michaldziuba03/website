---
import BaseHead from '../components/BaseHead.astro';
import Button from '../components/Button.astro';
import Underline from '../components/Underline.astro';
import Dots from '../components/Dots.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<div class="w-full h-svh flex items-center justify-center">
			<div class="relative">
				<Dots class="absolute -z-10 -right-10 top-0" />
				<h1 class="mb-7 font-medium leading-snug tracking-wide text-center text-7xl">
					My name is <span class="text-primary">Micha≈Ç</span>.
					<br>
					I am <span class="relative">developer<Underline class="w-full absolute -bottom-4 mt-4 right-0 -z-10" /></span>.
				</h1>
				<p class="text-center text-slate-500 text-xl">I am software developer based in Poland.</p>

				<div class="flex justify-center gap-4 mt-7">
					<Button>Hire me</Button>
					<Button variant='bordered'>See projects</Button>
				</div>
			</div>
		</div>
	</body>
</html>
