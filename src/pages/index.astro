---
import Layout from '../layouts/Layout.astro';
import RotatingText from '../components/RotatingText';
import { Navigation } from '../components/Navigation';
import { Button } from '../components/Button';
import { ExperienceItem } from '../components/ExperienceItem';
import { Footer } from '../components/Footer';
import { Contact } from '../components/Contact';
import { ScrollToTop } from '../components/ScrollToTop';
import FeaturedPosts from '../components/FeaturedPosts.astro';
---
<Layout>
	<div class="flex flex-col w-full items-center">
				<Navigation />
				<section class="px-8 py-24 max-screen container md:py-lg md:pt-sm flex flex-col items-center gap-8 overflow-x-hidden sm:flex-row md:gap-16">
					<div class="w-full space-y-6">
						<h1 class="font-black text-8xl text-balance">I do...</h1>
						<h1 class="font-black text-7xl text-balance flex items-center gap-3">
							<span>Creative</span>
							<RotatingText
								client:only
								texts={['coding.', 'design.', 'contributions.']}
								mainClassName="px-2 sm:px-2 md:px-3 bg-primary text-white overflow-hidden py-0.5 sm:py-1 md:py-2 justify-center rounded-lg"
								staggerFrom={"last"}
								initial={{ y: "100%" }}
								animate={{ y: 0 }}
								exit={{ y: "-120%" }}
								staggerDuration={0.025}
								splitLevelClassName="overflow-hidden pb-0.5 sm:pb-1 md:pb-1"
								transition={{ type: "spring", damping: 30, stiffness: 400 }}
								rotationInterval={2000}
							/>
						</h1>

						<p class="text-xl text-gray-800 text-balance mt-10">
							I'm software developer and open source contributor </br>
							passionate about building efficient and scalable solutions.
						</p>

						<div class="flex gap-8 mt-10">
							<Button variant="primary" size="lg">See Projects</Buton>
							<Button variant="outline" size="lg">My Resume</Buton>
						</div>
					</div>
					<!--<div class="bg-primary h-[400px] relative w-full sm:w-1/2"></div> -->
			</section>

			<section class="px-8 py-24 max-screen container md:py-lg md:pt-sm flex flex-col items-center gap-8 overflow-x-hidden sm:flex-row md:gap-16">
				<div class="w-full flex justify-between gap-32">
					<div>
							<h2 class="font-black text-4xl relative before:absolute before:w-12 before:rounded-lg before:-top-5 before:bg-primary before:h-2">
								Experience and education
							</h2>
							<p class="mt-6">
								I have worked with some of the most innovative industry leaders </br>
								to help build their top-notch products.
							</p>
					</div>

					<div class="flex flex-col w-full items-center gap-6">
						<ExperienceItem 
							position="Software Developer" 
							place="Ever Technologies" 
							contract="B2B Contract"
							location="Remote"
						/>
						<ExperienceItem 
							position="Bachelor of Computer Science" 
							place="Maria Curie-SkÅ‚odowska University"
							location='Lublin, Poland'
						/>
					</div>
				</div>
			</section>
			
			<FeaturedPosts />
			<Contact />
			<Footer />
	</div>
	<ScrollToTop client:only />
</Layout>
